


<p id="notice"><%= notice %></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Genre</th>
      <th>Classification</th>
      <th>Book type</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.genre%></td>
        <td><%= book.classification %></td>
        <td><%= book.book_type %></td>
        <td><%= book.year %></td>
        <td><%= link_to 'Show', book_path(book), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_book_path(book),class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<%= paginate @books %>
<br>
<%= link_to 'New Book', new_book_path %>